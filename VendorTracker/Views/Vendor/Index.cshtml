@using VendorTracker.Models;
@{
  Layout = "_Layout";
}

<h1>Here are all of the current VENDORS:</h1>

@if (@Model.Count == 0)
{
  <h3>No VENDORS have been added yet! Please add one!</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Company</a></h3>
}

<p><a href='/'>Back home</a></p>