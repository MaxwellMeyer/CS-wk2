@{
  Layout = "_Layout";
}

<h1>Add a new order to @Model.Company</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id"> required
  <label for="orderCompany">Order Company</label>
  <input id="orderCompany" name="orderCompany" type="text" required>
  <label for="orderDescription">Order Description</label>
  <input id="orderDescription" name="orderDescription" type="text" required>
  <label for="orderPrice">Order Price</label>
  <input id="orderPrice" name="orderPrice" type="text" required>
  <button type='submit'>Add Order</button>
</form>


<p> <a href="/vendors">Return to Vendor list</a> </p>
<p> <a href="/">Return to Home</a> </p>